@model IEnumerable<SliderListItemVM>


<section class="hero-area hero-slider-1">
    <div class="sb-slick-slider" data-slick-setting='{
                            "autoplay": true,
                            "fade": true,
                            "autoplaySpeed": 3000,
                            "speed": 3000,
                            "slidesToShow": 1,
                            "dots":true
                            }'>

        
            @foreach (var slider in Model)
            {
                <div class="single-slide  @(slider.IsLeft == true ? "bg-shade-white" : "bg-ghost-white") " style="width:100%">
                    <div class="container">
                        <div class="home-content text-center text-sm-left position-relative">
                            <div class="hero-partial-image @(slider.IsLeft == true ? "image-left" : "image-right ")">
                                <img src="@slider.ImageUrl" alt="">
                            </div>
                            <div class="row @(slider.IsLeft == true ? "align-items-center justify-content-start justify-content-md-end" : "no-gutters" ) ">
                                <div class="col-xl-6 col-md-6 col-sm-7">
                                    <div class="home-content-inner @(slider.IsLeft == true ? "content-right-side" : "content-left-side")">
                                        <h1>
                                            @slider.Title
                                            <br>
                                            @slider.Title2
                                        </h1>
                                        <h2>@slider.Text</h2>
                                        <a href="shop-grid.html" class="btn btn-outlined--primary">
                                           Price - Order Now!
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        

    </div>
</section>



